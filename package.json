{
  "name": "promptspeak-mcp-server",
  "version": "0.1.0",
  "description": "PromptSpeak MCP Server - Gatekeeper for AI Agent Control",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:stress": "vitest run tests/stress --reporter=verbose",
    "lint": "eslint src --ext .ts",
    "seed": "tsx scripts/seed-database.ts",
    "seed:dry-run": "tsx scripts/seed-database.ts --dry-run",
    "seed:force": "tsx scripts/seed-database.ts --force"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@pinecone-database/pinecone": "^6.1.4",
    "better-sqlite3": "^12.5.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3",
    "uuid": "^13.0.0",
    "yaml": "^2.8.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/crypto-js": "^4.2.1",
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "docx": "^9.5.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
